
    <div class="row">
    {{# each product}}

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{this.tittle}}</h3>
                        <p class="description"> {{this.description}}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{this.price}}</div>
                            <a href="/detail/{{this._id}}" class="btn btn-success pull-right" role="button">View detail</a>
                            <br>
                            <div class="id pull-left">ID: {{this.id}}</div>
                        </div>
                    </div>
                </div>
            </div>

    {{/each}}
    </div>



