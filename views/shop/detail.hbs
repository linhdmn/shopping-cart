
{{# product}}
<form name="detail" action="/detail/{{this.id}}" method="post">
    <div class="row">

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{this.tittle}}</h3>
                        <p class="description"> {{this.description}}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{this.price}}</div>
                            <a href="/" class="btn btn-success pull-right" role="button">Back</a>
                            <br>
                            <div class="id pull-left">ID: {{this.id}}</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>


    </div>
</form>
{{/product}}